extends layout.pug

block content
  .wrapper-color
    header.header
      a.header__logo.logo(href='/')
        img.logo__image(src='/img/icons/logo-image-only.svg' alt='логотип Тайпотеки')
        span.logo__name Типотека
      if user
        nav.header__nav
        ul.header__nav-list
          li.header__list-item
            p Алёна Фролова
          li.header__list-item
            a.header__exit(href='#') Выйти
        a.header__avatar.avatar
          img(src='/img/avatar-2.png' alt='аватар пользователя')
      else
        a.header__registration(href='/register') Регистрация
        a.header__enter(href='/login') Вход с паролем
      a.header__search.button.button--search(href='/search' aria-label='поиск по сайту')
    main
      section.search-page
        .search-page__wrapper
          h1 Поиск
          .search.search-page__form
            form(action='/search/results/' method='get')
              label
                input(type='search' name='query' placeholder='Что ищем?' value= query)
              button.search__button.button.button--transparent(type='submit') Найти
            each article in foundArticles
              .search__result
                time.search__date(datetime=article[`created_date`])
                  +time(new Date(article[`created_date`]))
                a.search__link(href=`/articles/${article.id}`)
                  |  #{article.title}
    +pagination(page, totalPages, 2, `?`, query)
